<Window x:Class="WordScape.WordScapeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordScape"
        mc:Ignorable="d"
        Title="WordScapes" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal">
            <Button x:Name="BtnPlayAgain" Content="_Play Again" Margin="0,0,10,0" Click="BtnPlayAgain_Click"/>
            <Button x:Name="BtnShowLtrs" Content="_ShowLetters" Margin="0,0,10,0" Click="BtnShowLtrs_Click"/>
        </StackPanel>
        <UniformGrid Grid.Row="1" Name="unigrid"/>
        <TextBlock x:Name="TxtLtrsSoFar" 
                   HorizontalAlignment="Center" 
                   Text="{Binding StrWordSoFar}"
                   FontSize="24" 
                   Margin="0,0,0,0" Grid.Row="2" />
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="80"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ListBox x:Name="wrdsSoFar" Grid.Column="0" ItemsSource="{Binding LstWrdsSoFar}" />
            <local:LetterWheel x:Name="ltrWheel" Grid.Column="1" />
        </Grid>

    </Grid>
</Window>
