    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <!--controls-->
            <RowDefinition Height="300"/>
            <!--grid-->
            <RowDefinition Height="30"/>
            <!--wordsofar-->
            <RowDefinition Height="230"/>
            <!--wheel-->
            <RowDefinition Height="*"/>
            <!--wrdlist-->
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal">
            <Button x:Name="BtnPlayAgain" Content="_Play Again" Margin="0,0,10,0" Click="BtnPlayAgain_Click"/>
            <Label Content="WordLen"/>
            <TextBox HorizontalAlignment="Left" Height="23"  Text="{Binding LenTargetWord}" VerticalAlignment="Top" Width="20" ToolTip="Length of longest word (max = 11, takes several seconds)"/>
            <Label Content="SubWordLen"/>
            <TextBox HorizontalAlignment="Left" Height="23"  Text="{Binding MinSubWordLength}" VerticalAlignment="Top" Width="20" ToolTip="Minimum Sub Word length"/>
        </StackPanel>
        <UniformGrid Grid.Row="1" Name="unigrid"/>
        <TextBlock x:Name="TxtLtrsSoFar" 
                   HorizontalAlignment="Center" 
                   Text="{Binding StrWordSoFar}"
                   FontSize="24" 
                   Grid.Row="2" />
        <Grid Grid.Row="3">
            <local:LetterWheel x:Name="ltrWheel" />
        </Grid>
        <Grid Grid.Row="4">
            <DockPanel>
                <ListBox x:Name="wrdsSoFar" ItemsSource="{Binding LstWrdsSoFar}" ScrollViewer.VerticalScrollBarVisibility="Disabled" >
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
